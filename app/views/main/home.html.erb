<%= javascript_include_tag "main" %>
<div class="top_title">
	<div class="title_container">
		<div class="iToGo">
			<%= link_to "iTOGO","/main/home",id:"text2" %>
		</div>
		<div class="logout">
			log out
		</div>
	</div>
</div>
<div class="container">
	<div class="left_column">
		<div class="top_profile">
			<%= image_tag("profile.jpg", :alt => "Norman Chen", :size => "70x70", :class => "profile_photo") %>
			<div class="profile_name">
				Norman Chen
				<br>
				<%= link_to "Edit your profile","/main/profile",class:"decoration", :remote => true, "data-type" => "script" %>
			</div>
		</div>
		<div class="people active">
			<%= image_tag("events.png", :alt => "chat") %><%= link_to "People","/main/people",class:"decoration", :remote => true, "data-type" => "script" %>
		</div>
		<div class='events' id="events">
			<%= image_tag("events.png", :alt => "chat") %><%= link_to "Events","/main/events",class:"decoration", :remote => true, "data-type" => "script" %>
		</div>
		<div class="chat">
			<div class="circle">
				3
			</div>
			<%= image_tag("iconChat.png", :alt => "chat") %> <%= link_to "Chat","/main/chat",class:"decoration", :remote => true, "data-type" => "script"%>
		</div>


		<div class="favorite">
			<%= image_tag("fav.png", :alt => "chat") %><%= link_to "My favorite","/main/Myfavorite",class:"decoration" %>
		</div>
		<br>
		<br>
		<br>
		<br>
		<br>
		<div class="self_info">
			練習自我介紹中，請勿打擾．
			<br>
			哥寫的不是程式．
			<br>
			哇嗚！！！
			<br>
			<div class="selfedit">
				修改狀態
			</div>
		</div>
	</div>
	<div class="center_column">

		<div class="tab_container">
			<div class="tab_content">
				<% for i in 1..80 %>
				<%= image_tag("profile#{i%4}.jpg", :class => "result_photo") %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="right_column">
	
	</div>
</div>

